  "start_url": "/",
  "display": "standalone",
  "background_color": "#667eea",
  "theme_color": "#5a67d8",
  "orientation": "portrait-primary",
  "scope": "/",
  "icons": [
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
