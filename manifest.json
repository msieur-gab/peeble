    {
      "src": "/icons/icon-512.png", 
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "categories": ["communication", "security", "utilities"],
  "screenshots": [
    {
      "src": "/screenshots/app-screenshot-1.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "shortcuts": [
    {
      "name": "Record Message",
      "short_name": "Record",
      "description": "Create a new secure voice message",
      "url": "/#record",
      "icons": [{ "src": "/icons/record-icon.png", "sizes": "96x96" }]
